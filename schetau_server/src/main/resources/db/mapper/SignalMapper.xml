<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.github.datacanvasio.schetau.db.mapper.SignalMapper">
    <sql id="table">schetau_signal</sql>
    <sql id="relation">schetau_signal_relation</sql>

    <select id="findBySignature" resultType="Signal">
        select * from
        <include refid="table"/>
        <where>
            signature = #{signature}
        </where>
    </select>

    <select id="findParents" resultType="Signal">
        select * from
        <include refid="relation"/>
        sr join
        <include refid="table"/>
        s on sr.parent_id = s.signal_id
        <where>
            sr.child_id = #{childId}
        </where>
    </select>

    <insert id="insert" parameterType="Signal" useGeneratedKeys="true" keyProperty="signalId">
        insert into
        <include refid="table"/>
        (
        <trim suffixOverrides=",">
            <if test="model.countDown != null">count_down,</if>
            signature,
        </trim>
        ) values (
        <trim suffixOverrides=",">
            <if test="model.countDown != null">#{model.countDown},</if>
            #{model.signature},
        </trim>
        )
    </insert>

    <update id="update" parameterType="Signal">
        update
        <include refid="table"/>
        <set>
            <if test="model.countDown != null">count_down = #{model.countDown},</if>
        </set>
        <where>
            signal_id = #{model.signalId}
        </where>
    </update>
</mapper>
